<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Voting App</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="../public/results.css" />
  </head>
  <body>
    <div class="w-100" id="counter" style="display: flex; align-items: center;justify-content: center;">
      <label style="font-size: x-large;padding: 5px; background-color: rgb(197, 197, 197); border-radius: 3px;font-weight: 800;">VOTES : <%= votes %></label>
    </div>
      <div class="form">
        <% images.forEach(function(image,i) { %>
        <div class="image-container" id="imageContainer_<%= i %>">
          <img
            id="image_<%= i %>"
            src="<%= image.img.src %>"
            alt="<%= image.img.alt %>"
          />
          
          <p class="image-name"><%= image.name %></p>
          <p class="image-name" style="font-size: medium;padding: 5px; background-color: rgb(206, 206, 206); border-radius: 3px;">VOTES : <%= image.votes.length %></p>
        </div>
        <% }) %>
      </div>
      </div>

    <script>
      
    </script>
  </body>
</html>
