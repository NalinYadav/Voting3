<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Voting App</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="../public/styles.css" />
    <!-- Bootstrap CSS CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div id="passwordModal" class="modal fade">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Enter Password</h5>
          </div>
          <form id="passwordForm" action="/home" method="POST">
            <div class="modal-body">
              <div class="input-group">
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="Password"
                  required
                  onclick="hideErrorMessage()"
                />
              </div>
              <% if (state === "invalid") { %>
              <div class="error-message" id="errorMessage1">
                Invalid password. Please try again.
              </div>
              <% } %> <% if (state === "used") { %>
              <div class="error-message" id="errorMessage2">
                Password already used earlier.
              </div>
              <% } %>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      var passwordModal = new bootstrap.Modal(
        document.getElementById("passwordModal"),
        { backdrop: "static" }
      );

      function hideErrorMessage() {
        const errorMessage1 = document.getElementById("errorMessage1");
        const errorMessage2 = document.getElementById("errorMessage2");

        if (errorMessage1) {
          errorMessage1.style.display = "none";
        }

        if (errorMessage2) {
          errorMessage2.style.display = "none";
        }
      }

      passwordModal.show();
    </script>
  </body>
</html>
